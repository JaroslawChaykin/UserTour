<div class="posts">
  <p id="notice"><%= notice %></p>
  <div class="container">
    <div class="header">
      <!--    <div class="random">-->
      <div class="logo">UserTour</div>
      <div class="nav">
        <ul>
          <li><%= link_to "About", about_path %></li>
          <li><%= link_to "Promo", promo_path %></li>
          <li><%= link_to "Posts", posts_path %></li>
          <li><%= link_to 'New Post', new_post_path, class: 'new-post'%></li>
        </ul>
      </div>
      <!--    </div>-->
    </div>
  </div>
  <div class="container">
    <div class="posts-box">
      <h1>Posts</h1>
      <table style="border-spacing: unset">
        <thead>
        <tr class="head-row">
          <th>Author</th>
          <th>Title</th>
          <th>Price</th>
          <th>Timebypass</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @posts.each do |post| %>
          <tr class="body-row">
            <td><%= post.author %></td>
            <td><%= post.title %></td>
            <td><%= post.price %></td>
            <td><%= post.timeBypass %></td>
            <td class="table-content"><%= post.content %></td>
            <td class="change"><%= link_to 'Show', post %></td>
            <td class="change"><%= link_to 'Edit', edit_post_path(post) %></td>
            <td class="change"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <br>

</div>
