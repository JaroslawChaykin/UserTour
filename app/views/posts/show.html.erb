<div class="posts">
  <div class="container">
    <div class="header">
      <!--    <div class="random">-->
      <div class="logo">UserTour</div>
      <div class="nav">
        <ul>
          <li><%= link_to 'Edit', edit_post_path(@post) %></li>
          <li><%= link_to "To Posts", posts_path %></li>
        </ul>
      </div>
      <!--    </div>-->
    </div>
    <p id="notice"><%= notice %></p>
    <div class="show-box">
      <div class="post-content">
        <div class="image">
          <%= image_tag(@post.image.url, alt: 'Image') if @post.image? %>
        </div>
        <div class="post-information">
          <p>
            <strong>Author:</strong>
            <%= @post.author %>
          </p>

          <p>
            <strong>Title:</strong>
            <%= @post.title %>
          </p>

          <p>
            <strong>Content:</strong>
            <%= @post.content %>
          </p>

          <p>
            <strong>Timebypass:</strong>
            <%= @post.timeBypass %>
          </p>

          <p>
            <strong>Price:</strong>
            <%= @post.price %>
          </p>
        </div>
      </div>


      <div class="comment-box">
        <div class="comments">
          <h2>Comments</h2>
          <%= render @post.comments %>
        </div>

        <div class="add-comment">
          <h2>Add a comment:</h2>
          <%= render "comments/form" %>
        </div>
      </div>
    </div>

  </div>
</div>