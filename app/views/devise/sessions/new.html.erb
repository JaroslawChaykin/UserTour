<div class="authorization">
  <div class="left">
    <a href="/home">
      <img src="/assets/logo.svg" alt="">
    </a>
    <img src="/assets/logInBG.png" alt="">
  </div>
  <div class="right">
    <h2>Вход</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="inputs">
        <div class="field email">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Почта' %>
        </div>

        <div class="field password">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Пароль' %>
        </div>
      </div>

      <div class="actions log-in-btn">
        <%= f.submit "Вход" %>
      </div>

      <%# if devise_mapping.rememberable? %>
<!--        <div class="field">-->
          <%#= f.check_box :remember_me %>
          <%#= f.label :remember_me %>
<!--        </div>-->
      <%# end %>
    <% end %>

    <div class="links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
    document.querySelector('.header').remove()
</script>

