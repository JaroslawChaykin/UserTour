<div class="authorization registration">
  <div class="left">
    <a href="/home">
      <img src="/assets/logo.svg" alt="">
    </a>
    <img src="/assets/logInBG.jpg" alt="">
  </div>
  <div class="right">
    <h2>Регистрация</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

<!--      <div>-->
        <%#= f.file_field :avatar %>
<!--      </div>-->

      <div class="inputs">
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Почта' %>
        </div>

        <div class="field">
          <%= f.text_field :username, autocomplete: "username", placeholder: 'Псевдоним' %>
        </div>

        <div class="field">
          <%# if @minimum_password_length %>
<!--            <em>(<%#= @minimum_password_length %> characters minimum)</em>-->
<!--          <%# end %><br />-->
          <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Пароль' %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Повторите пароль' %>
        </div>
      </div>

      <div class="actions registration-btn">
        <%= f.submit "Зарегистрироваться" %>
      </div>
    <% end %>

    <div class="links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
    document.querySelector('.header').remove()
</script>
