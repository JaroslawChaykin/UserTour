<div class="user-profile">
  <div class="container">
    <div class="user-box">
      <div class="user-header">
        <div class="user-about">
          <div class="user-avatar">
            <img src="/assets/ProfileAvatarBlue.svg" alt="">
          </div>
          <div class="user-username-follows">
            <div class="user-username">
              <%= @user.username %>
              <% if @user.isadmin == true %>
                <span>Admin</span>
              <% end %>
            </div>
            <div class="user-follows">
              <div class="follow user-followers">Подписчиков <%= @user.followers.count %></div>
              <div class="follow user-following">
                <%= link_to "Подписки", following_path %>
                &nbsp<%= @user.followees.count %>
              </div>
            </div>
          </div>
        </div>
        <div class="user-edit">
          <% if user_signed_in? && @user.id == current_user.id %>
            <a href="/posts/new">Создать тур</a>
            <%= link_to 'Редактировать', edit_user_registration_path %>
            <%= link_to 'Выйти', destroy_user_session_path, method: :delete, class: 'exit' %>
          <% elsif user_signed_in? && current_user.followees.include?(@user) %>
            <h5><%= button_to "Отписаться", unfollow_user_path, method: "POST" %></h5>
          <% elsif user_signed_in? %>
            <h5><%= button_to "Подписаться", follow_user_path, method: "POST"  %></h5>
          <% else %>
            <%# можно добавить кнопку для регистрации или что-нибудь ещё  %>
          <% end%>
        </div>
      </div>

      <div class="user-information">
        <div class="left">
          <div class="about-user interests">
            <h2>Интересы</h2>
            <div>Дайвинг</div>
          </div>
          <div class="about-user self-links">
            <h2>Соц-сети</h2>
            <div>Instagram</div>
            <div>VK</div>
          </div>
        </div>
        <div class="right">
          <div class="information-container">
            <div class="charts">
              <div class="chart chart-rating">
                <div class="title">Рэйтинг</div>
                <svg viewBox="0 0 36 36" class="circular-chart">
                  <path class="circle-bg"
                        d="M18 2.0845
               a 15.9155 15.9155 0 0 1 0 31.831
               a 15.9155 15.9155 0 0 1 0 -31.831"
                    />
                  <path class="circle"
                        stroke-dasharray="94, 100"
                        d="M18 2.0845
               a 15.9155 15.9155 0 0 1 0 31.831
               a 15.9155 15.9155 0 0 1 0 -31.831"
                    />
                  <text x="18" y="20.35" class="percentage">94%</text>
                </svg>
              </div>
              <div class="chart chart-activity">
                <div class="title">Активность</div>
                <svg viewBox="0 0 36 36" class="circular-chart">
                  <path class="circle-bg"
                        d="M18 2.0845
               a 15.9155 15.9155 0 0 1 0 31.831
               a 15.9155 15.9155 0 0 1 0 -31.831"
                    />
                  <path class="circle"
                        stroke-dasharray="12, 100"
                        d="M18 2.0845
               a 15.9155 15.9155 0 0 1 0 31.831
               a 15.9155 15.9155 0 0 1 0 -31.831"
                    />
                  <text x="18" y="20.35" class="percentage">12%</text>
                </svg>
              </div>
              <div class="chart chart-country">
                <div class="title">Страны</div>
                <svg viewBox="0 0 36 36" class="circular-chart">
                  <path class="circle-bg"
                        d="M18 2.0845
               a 15.9155 15.9155 0 0 1 0 31.831
               a 15.9155 15.9155 0 0 1 0 -31.831"
                    />
                  <path class="circle"
                        stroke-dasharray="56, 100"
                        d="M18 2.0845
               a 15.9155 15.9155 0 0 1 0 31.831
               a 15.9155 15.9155 0 0 1 0 -31.831"
                    />
                  <text x="18" y="20.35" class="percentage">56%</text>
                </svg>
              </div>
              <div class="chart chart-city">
                <div class="title">Города</div>
                <svg viewBox="0 0 36 36" class="circular-chart">
                  <path class="circle-bg"
                        d="M18 2.0845
               a 15.9155 15.9155 0 0 1 0 31.831
               a 15.9155 15.9155 0 0 1 0 -31.831"
                    />
                  <path class="circle"
                        stroke-dasharray="36, 100"
                        d="M18 2.0845
               a 15.9155 15.9155 0 0 1 0 31.831
               a 15.9155 15.9155 0 0 1 0 -31.831"
                    />
                  <text x="18" y="20.35" class="percentage">36%</text>
                </svg>
              </div>
            </div>
            <div class="in-favorites">
              <div class="in-favorites-header">
                Избранные <%= @user.favorites.count %>
              </div>
              <div class="in-favorites-list">
                <% @posts.each do |post| %>
                  <div class="post">
                    <div class="info">
                      <div class="image">
                        <%= image_tag(post.image.small_thumb.url, alt: 'Image' ) if post.image? %>
                      </div>
                      <div class="text">
                        <div class="title"><%= post.title %></div>
                        <div class="description"><%= post.description%></div>
                      </div>
                    </div>
                    <div class="link">
                      <%= link_to "Перейти", post %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>


  </div>
</div>